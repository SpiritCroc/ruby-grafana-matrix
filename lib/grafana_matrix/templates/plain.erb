<%= data['title'] %>
<%- unless data.fetch('message', '').empty? -%>
<%= data['message'] %>
<%- end -%>
<%- if data.key? 'error' -%>
Error: <%= data['error'] %>
<%- end -%>

<%- if data['state'] != 'ok' -%>
<%-   unless data['evalMatches'].empty? -%>
<%-     data['evalMatches'].each do |match| -%>
<%= match['metric'] %>: <%= match['value'] %>
<%-     end -%>

<%-   end -%>
<%-   if data['imageUrl'] && rule.image? -%>
Image: <%= data['imageUrl'] %>
<%-   end -%>
<%- end -%>
URL: <%= data['ruleUrl'] %>
